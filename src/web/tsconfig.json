{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./static/",
    "rootDir": "./static",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["static/**/*.ts"],
  "exclude": ["node_modules", "static/**/*.test.ts"]
} 